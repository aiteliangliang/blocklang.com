{
  "name": "client",
  "version": "1.0.0",
  "scripts": {
    "dev": "dojo build --mode dev --watch file --serve",
    "build": "dojo build --mode dist",
    "build:dev": "dojo build --mode dev",
    "test": "dojo test",
    "test:unit": "dojo build --mode unit && dojo test --unit --config local",
    "test:functional": "dojo build --mode functional && dojo test --functional --config local",
    "test:all": "dojo build --mode unit && dojo build --mode functional && dojo test --all --config local",
    "precommit": "lint-staged",
    "prettier": "prettier --write 'src/**/*.ts' 'src/**/*.css' 'tests/**/*.ts'"
  },
  "dependencies": {
    "@dojo/framework": "^5.0.0",
    "@dojo/themes": "^5.0.0",
    "@dojo/widgets": "^5.0.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.21",
    "@fortawesome/free-brands-svg-icons": "^5.10.1",
    "@fortawesome/free-solid-svg-icons": "^5.10.1",
    "@stomp/stompjs": "^5.4.2",
    "@types/dompurify": "^0.0.33",
    "@types/highlight.js": "^9.12.3",
    "@types/jquery": "^3.3.31",
    "@types/marked": "^0.6.5",
    "@types/semver": "^6.0.1",
    "@types/sockjs-client": "^1.1.1",
    "bootstrap": "^4.3.1",
    "dompurify": "^1.0.11",
    "github-markdown-css": "^3.0.1",
    "highlight.js": "^9.15.9",
    "jquery": "^3.4.1",
    "marked": "^0.7.0",
    "moment": "^2.24.0",
    "popper.js": "^1.15.0",
    "semver": "^6.3.0",
    "sockjs-client": "^1.3.0",
    "tslib": "~1.9.3"
  },
  "devDependencies": {
    "@dojo/cli": "^5.0.0",
    "@dojo/cli-build-app": "^5.0.0",
    "@dojo/cli-test-intern": "^5.0.0",
    "@types/node": "~9.6.5",
    "husky": "3.0.3",
    "lint-staged": "9.2.1",
    "prettier": "1.18.2",
    "typescript": "~3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "printWidth": 120,
    "arrowParens": "always"
  }
}
