{
  "name": "client",
  "version": "1.0.0",
  "scripts": {
    "dev": "dojo build --mode dev --watch --serve",
    "build": "dojo build --mode dist",
    "build:dev": "dojo build --mode dev",
    "test": "dojo test",
    "test:unit": "dojo build --mode unit && dojo test --unit --config local",
    "test:functional": "dojo build --mode functional && dojo test --functional --config local",
    "test:all": "dojo build --mode unit && dojo build --mode functional && dojo test --all --config local",
    "precommit": "lint-staged",
    "prettier": "prettier --write 'src/**/*.{ts,tsx}' 'src/**/*.css' 'tests/**/*.{ts,tsx}'"
  },
  "dependencies": {
    "@dojo/framework": "^6.0.3",
    "@dojo/themes": "^6.0.0",
    "@stomp/stompjs": "^5.4.2",
    "@types/dompurify": "^0.0.33",
    "@types/highlight.js": "^9.12.3",
    "@types/jquery": "^3.3.31",
    "@types/lodash": "^4.14.144",
    "@types/marked": "^0.6.5",
    "@types/semver": "^6.0.2",
    "@types/sockjs-client": "^1.1.1",
    "bootstrap": "^4.3.1",
    "dojo-fontawesome": "0.0.2",
    "dompurify": "^1.0.11",
    "github-markdown-css": "^3.0.1",
    "highlight.js": "^9.15.10",
    "jquery": "^3.4.1",
    "lodash": "^4.17.15",
    "marked": "^0.7.0",
    "moment": "^2.24.0",
    "page-designer": "0.0.2",
    "popper.js": "^1.15.0",
    "semver": "^6.3.0",
    "sockjs-client": "^1.4.0",
    "tslib": "~1.9.1"
  },
  "devDependencies": {
    "@dojo/cli": "^6.0.0",
    "@dojo/cli-build-app": "^6.0.4",
    "@dojo/cli-test-intern": "^6.0.1",
    "@types/node": "~10.12.10",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "typescript": "~3.4.5"
  },
  "lint-staged": {
    "*.{ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "printWidth": 120,
    "arrowParens": "always"
  }
}
