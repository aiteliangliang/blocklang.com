{
  "name": "client",
  "version": "1.0.0",
  "scripts": {
    "dev": "dojo build --mode dev --watch --serve",
    "build": "dojo build --mode dist",
    "build:dev": "dojo build --mode dev",
    "test": "dojo test",
    "test:unit": "dojo build --mode unit && dojo test --unit --config local",
    "test:functional": "dojo build --mode functional && dojo test --functional --config local",
    "test:all": "dojo build --mode unit && dojo build --mode functional && dojo test --all --config local",
    "prettier": "prettier --write \"{src,tests}/**/*.{ts,tsx,css}\"",
    "json-server": "json-server --watch json-server/db.json --routes json-server/routes.json"
  },
  "dependencies": {
    "@blocklang/bootstrap-classes": "~0.0.3-alpha.8",
    "@blocklang/dojo-fontawesome": "~0.0.3-alpha.2",
    "@blocklang/page-designer": "~0.0.3-alpha.20",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@dojo/framework": "^7.0.2",
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-brands-svg-icons": "^5.14.0",
    "@fortawesome/free-regular-svg-icons": "^5.14.0",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@stomp/stompjs": "^5.4.4",
    "@types/dompurify": "^2.0.3",
    "@types/highlight.js": "^9.12.4",
    "@types/jquery": "^3.5.1",
    "@types/lodash": "^4.14.159",
    "@types/marked": "^1.1.0",
    "@types/semver": "^7.3.3",
    "@types/sockjs-client": "^1.1.1",
    "bootstrap": "^4.5.2",
    "dompurify": "^2.0.12",
    "github-markdown-css": "^4.0.0",
    "highlight.js": "^10.1.2",
    "jquery": "^3.5.1",
    "lodash": "^4.17.20",
    "marked": "^1.1.1",
    "moment": "^2.27.0",
    "popper.js": "^1.16.1",
    "semver": "^7.3.2",
    "sockjs-client": "^1.5.0",
    "tslib": "^2.0.1"
  },
  "devDependencies": {
    "@dojo/cli": "^7.0.0",
    "@dojo/cli-build-app": "^7.0.3",
    "@dojo/cli-test-intern": "^7.0.0",
    "@types/node": "^14.6.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "printWidth": 120,
    "arrowParens": "always"
  }
}
